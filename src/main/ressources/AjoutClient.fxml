<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"  xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.AjoutClientController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">
    <Label text="Ajouter un Client"  style="-fx-font-size: 20px;"/>
    <TextField fx:id="numClientField" promptText="Numéro Client"/>
    <TextField fx:id="nomField" promptText="Nom"/>
    <TextField fx:id="prenomField" promptText="Prénom"/>
    <TextField fx:id="adresseField" promptText="Adresse"/>
    <TextField fx:id="phoneField" promptText="Téléphone"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <Button text="Ajouter" onAction="#ajouterClient"/>
</VBox>