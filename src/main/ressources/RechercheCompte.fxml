<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.controller.RechercheCompteController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Rechercher un Compte" style="-fx-font-size: 20px;"/>

    <TextField fx:id="numCompteField" promptText="Numéro du Compte"/>

    <Button text="Rechercher" onAction="#rechercherCompte"/>

    <Label fx:id="resultLabel" text="Résultat : " style="-fx-font-size: 14px;"/>
</VBox>
